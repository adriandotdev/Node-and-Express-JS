    <script>
        const btnDelete = document.getElementById('btn-delete-blog') || null;

        if (btnDelete !== null && btnDelete !== undefined) {

            btnDelete.addEventListener('click', () => {

                const endPoint = `/blogs/${btnDelete.dataset.blogid}`;

                fetch(endPoint, {

                    method: 'DELETE'
                })
                .then(result => {
                    
                    window.location.href = '/blogs'
                })
                .catch(err => console.log(err))
            });
        }
    </script>
